function after_mail_sent_action($contact_form) {
    if ($contact_form-&gt;id() == 999) { // ãƒ•ã‚©ãƒ¼ãƒ ã®ID ã‚’é©å®œè¨­å®šã™ã‚‹
        $submission = WPCF7_Submission::get_instance();

        if ($submission) {
            // CONTACT FORM ãŒåŸ‹ã‚è¾¼ã¾ã‚Œã¦ã„ã‚‹æŠ•ç¨¿ãƒšãƒ¼ã‚¸ã®ID ã‚’å–å¾—ã™ã‚‹
            $post_id = $submission-&gt;get_meta('container_post_id');

            // ã‚«ã‚¹ã‚¿ãƒ ãƒ•ã‚£ãƒ¼ãƒ«ãƒ‰ã‹ã‚‰ãƒ•ã‚¡ã‚¤ãƒ«ã®URLã‚’å–å¾—ã™ã‚‹
            if (function_exists('CFS')) {
                $file_url = CFS()-&gt;get('download_file_url', $post_id);

                if ($file_url) {
                    session_start();
                    $_SESSION['download_url'] = $file_url;
                }
            }
        }
